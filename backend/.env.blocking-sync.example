# Configuration file for IP Blocking Synchronization System
# Copy to .env and update values for your environment

# ============= WINDOWS HOST CONFIGURATION =============

# Linux/Kali VM Connection Details
LINUX_VM_HOST=192.168.1.100
LINUX_VM_PORT=22
LINUX_VM_API_PORT=5001
LINUX_VM_API_TOKEN=thrg_secure_api_token_change_me_prod
LINUX_VM_USER=kali

# ============= BLOCKING SERVICE CONFIGURATION =============

# API Token for blocking endpoints (secure token for API calls)
BLOCKING_API_TOKEN=threatguard_sync_token_secret_change_in_prod

# Use SSH for blocking (alternative to API)
# Set to 'true' to use SSH instead of REST API
USE_SSH_BLOCKING=false

# SSH Key path (if using SSH mode)
SSH_KEY_PATH=/home/user/.ssh/id_rsa

# Synchronization timeout in seconds
SYNC_TIMEOUT=30

# ============= AUTO-BLOCKING CONFIGURATION =============

# Enable IP synchronization
ENABLE_SYNC=true

# Auto-retry failed blocks
AUTO_RETRY_FAILED=true

# Maximum retry attempts
MAX_RETRY_ATTEMPTS=3

# Retry interval in seconds
RETRY_INTERVAL_SECONDS=30

# Allow partial blocking (block even if one system fails)
ALLOW_PARTIAL_BLOCK=false

# ============= BLOCKING RULES CONFIGURATION =============

# Block inbound traffic from malicious IPs
BLOCK_INBOUND=true

# Block outbound traffic to malicious IPs
BLOCK_OUTBOUND=true

# ============= HEALTH CHECK CONFIGURATION =============

# Enable health checks
HEALTH_CHECK_ENABLED=true

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=60

# ============= DATABASE CONFIGURATION =============

# Already configured in main .env
# DATABASE_URL=sqlite:///users.db

# ============= LOGGING CONFIGURATION =============

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable detailed logging
DEBUG=false

# ============= SECURITY CONFIGURATION =============

# Admin token secret for JWT
ADMIN_TOKEN_SECRET=admin_secret_key_change_me_in_production

# SECRET_KEY for Flask (change in production)
SECRET_KEY=flask_secret_key_change_me_in_production

# ============= EMAIL NOTIFICATIONS (Optional) =============

# Send email when high-risk IPs are blocked
SEND_BLOCK_NOTIFICATIONS=true

# Email for admin notifications
ADMIN_EMAIL=admin@example.com

# ============= KALI LINUX VM CONFIGURATION (.env on Kali) =============

# API token (must match LINUX_VM_API_TOKEN on Windows)
BLOCKING_API_TOKEN=thrg_secure_api_token_change_me_prod

# Port for blocking agent API
BLOCKING_AGENT_PORT=5001

# Enable debug mode (set to false in production)
DEBUG=false

# Logging level
LOG_LEVEL=INFO
